{
  "name": "musea-guide",
  "author": "Ennio Mariani",
  "email": "mail@enniomariani.ch",
  "version": "1.0.1",
  "description": "Guide-App to play media on the Musea media players",
  "type": "module",
  "main": "./build/main/main.js",
  "scripts": {
    "test": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js ./tests --maxWorkers=50%",
    "e2e": "cls && wdio run wdio.conf.js",
    "e2eOneFile": "cls && wdio --spec e2e/TagAdminCreateAndDeleteTags.e2e.ts",
    "dev": "cross-env NODE_ENV=development npm start",
    "start": "electron-forge start",
    "build": "vue-tsc -p ./src/renderer/tsconfig.json --noEmit && vite build && tsc -p ./src/main/tsconfig.json && tsc-alias -p ./src/main/tsconfig.json",
    "prepackage": "npm run build",
    "package": "electron-forge package",
    "publish": "electron-forge publish"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/publisher-github": "^7.10.2",
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@wdio/cli": "^9.19.2",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^9.19.2",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vue": "^3.5.21",
    "vue-tsc": "^3.0.6",
    "wdio-electron-service": "^9.1.2"
  },
  "dependencies": {
    "jsonschema": "^1.5.0",
    "musea-client": "^1.0.9",
    "ping": "^0.4.4",
    "vue-i18n": "^11.1.11"
  }
}
